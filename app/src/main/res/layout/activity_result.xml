<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KONFIRMASI PENDAFTARAN"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="42dp"/>

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:layout_below="@+id/tv_judul"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_no_pendaftaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomor Pendaftaran"
        android:layout_below="@+id/tv_nama"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_jalur_pendaftaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jalur Pendaftaran"
        android:layout_below="@+id/tv_no_pendaftaran"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

</RelativeLayout>